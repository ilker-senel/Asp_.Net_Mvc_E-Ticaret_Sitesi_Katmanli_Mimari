
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sidebar 07</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/sidebar-07/css/style.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
    <link href="~/Content/PagedList.css" rel="stylesheet" />

</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="active">
            <h1><a href="index.html" class="logo">E</a></h1>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a href="~/AdminCategory/Index"><span class="fa fa-home"></span> Kategoriler</a>
                </li>
                <li>
                    <a href="~/AdminProduct/Index"><span class="fa fa-user"></span> Ürünler</a>
                </li>
                <li>
                    <a href="~/AdminProduct/CriticalStock"><span class="fa fa-sticky-note"></span> Kritik Stok<br />@Html.Action("StockCount", "AdminProduct")</a>
                </li>
                <li>
                    <a href="/AdminSales/Index"><span class="fa fa-cogs"></span> Satışlar</a>
                </li>
                <li>
                    <a href="/Admin/UserList"><span class="fa fa-paper-plane"></span> Kullanıcılar</a>
                </li>
                <li>
                    <a href="/AdminStatistics/Index"><span class="fa fa-paper-plane"></span> İstatistikler</a>
                </li>
                <li>
                    <a href="/Admin/Comment"><span class="fa fa-paper-plane"></span> Yorumlar</a>
                </li>
            </ul>




            <div class="footer">
                <p>
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib.com</a>
                </p>
            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Portfolio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container">
                @RenderBody()
            </div>

        </div>

    </div>

    @*<script src="~/Scripts/jquery-1.8.3.min.js"></script>*@


    @*<script src="~/sidebar-07/js/jquery.min.js"></script>*@
    <script src="~/sidebar-07/js/popper.js"></script>
    <script src="~/sidebar-07/js/bootstrap.min.js"></script>
    <script src="~/sidebar-07/js/main.js"></script>

</body>
</html>
